# LinkedIn Automation API Environment Variables

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/linkedin_automation
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///linkedin_automation.db

# Unipile API Configuration
UNIPILE_API_KEY=your-unipile-api-key-here
UNIPILE_API_BASE_URL=https://api.unipile.com
UNIPILE_WEBHOOK_SECRET=your-webhook-secret-here

# Rate Limiting Configuration
MAX_CONNECTIONS_PER_DAY=25
MIN_DELAY_BETWEEN_ACTIONS=300  # seconds (5 minutes)
MAX_DELAY_BETWEEN_ACTIONS=1800  # seconds (30 minutes)

# Working Hours Configuration (24-hour format)
WORKING_HOURS_START=9
WORKING_HOURS_END=17

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

